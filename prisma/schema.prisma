generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  name         String?
  password     String
  role         Role      @default(USER)
  profileImage String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  blogs        Blog[]    @relation("author_blogs")
  projects     Project[]
}

model Blog {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  summary   String
  content   String
  published Boolean  @default(false)
  views     Int      @default(0)
  thumbnail String?
  images    String[] @default([])
  authorId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      String[]
  author    User?    @relation("author_blogs", fields: [authorId], references: [id])
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String
  liveUrl     String?
  repoUrl     String?
  tags        String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  ownerId     String?
  featured    Boolean  @default(false)
  image       String?
  owner       User?    @relation(fields: [ownerId], references: [id])
}

model Skill {
  id        String   @id @default(uuid())
  name      String
  order     Int      @default(0)
  category  String
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  level     Int      @default(0)
}

model About {
  id        String   @id @default(uuid())
  fullName  String
  bio       String
  email     String?  @unique
  phone     String?
  location  String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resumeUrl String?
  shortBio  String?
  stats     Json?
  status    String?
  title     String
}

enum Role {
  USER
  ADMIN
}
